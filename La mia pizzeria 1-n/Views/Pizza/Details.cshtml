@using La_mia_pizzeria_1_n.Models;
@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli post</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Img">
            </div>
            <p>
                <strong>ID:</strong>
                @Model.Id
            </p>
            <p>
                <strong>Categoria:</strong>
                @Model.Category.Title
            </p>
            <p>
                <strong>Tags:</strong>
                @foreach (Tag tag in Model.Tags) {
                        <div>
                            <label>@tag.Title</label>
                        </div>
                }
            </p>
            <p>
                <strong>Nome:</strong>
                @Model.Name
            </p>
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>

        </div>
    </div>
</div>

